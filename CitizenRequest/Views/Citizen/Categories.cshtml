@model IEnumerable<Category>

<!-- Категории обращений -->
<section class="categories-section py-4 bg-light">
    <div class="cont-height"></div>

    <div class="container my-4">
        <!-- Заголовок -->
        <div class="d-flex justify-content-between align-items-center mb-5">
            <a href="javascript:history.back()" class="btn btn-secondary rounded-pill shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Назад
            </a>
            <h2 class="display-4 fw-bold text-center mb-0 position-relative">
                <span class="bg-primary text-white px-4 py-2 rounded-pill">Выберите категорию обращения</span>
            </h2>
            <div></div> <!-- Пустой элемент для выравнивания -->
        </div>

        <!-- Список категорий -->
        <div class="row g-4">
            @foreach (var category in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a asp-action="CreateApplication" asp-route-categoryId="@category.CategoryId"
                       class="card category-card h-100 text-decoration-none transform-on-hover">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper bg-primary rounded-circle mx-auto mb-4 p-3">
                                <i class="fas fa-folder-open fa-2x text-white"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">@category.CategoryName</h3>
                            <p class="text-muted mb-0">@category.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 py-3">
                            <span class="btn btn-primary rounded-pill px-4">
                                Выбрать <i class="fas fa-arrow-right ms-2"></i>
                            </span>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="cont-height"></div>

</section>