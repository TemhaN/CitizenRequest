@model CitizenRequest.Models.HomePageViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAuthenticated = User.Identity.IsAuthenticated;
    ViewData["Title"] = "Гос портал обращений – Гражданский Голос";
}

<!-- Главный баннер -->
<section class="hero-banner position-relative overflow-hidden">
    <div class="container">
        <div class="row justify-content-center text-center my-7 py-lg-8">
            <div class="col-lg-9 col-xl-8">
                <div class="hero-content bg-dark-soft rounded-4 p-5 shadow-lg">
                    <h1 class="display-3 fw-bold text-white mb-4">
                        <i class="fas fa-bullhorn me-3"></i>Гражданский Голос
                    </h1>
                    <p class="lead text-white mb-5">Ваше мнение формирует город! Сообщайте о проблемах и участвуйте в улучшении городской среды.</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Dashboard", "Citizen")" class="btn btn-lg btn-success rounded-pill px-5 py-3">
                            <i class="fas fa-user-cog me-2"></i>Личный кабинет
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Citizen")" class="btn btn-lg btn-light rounded-pill px-5 py-3 shadow-sm">
                            <i class="fas fa-sign-in-alt me-2"></i>Войти в систему
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Секция преимуществ -->
<section class="features-section my-5 bg-white">
    <div class="container">
        <div class="row g-5 align-items-center mb-7">
            <div class="col-lg-6">
                <div class="feature-image rounded-4 overflow-hidden">
                    <img src="/images/map.png" alt="Карта Казахстана" class="img-fluid">
                </div>
            </div>
            <div class="col-lg-6">
                <h2 class="display-5 fw-bold mb-4">Почему выбирают нас?</h2>
                <div class="d-grid gap-4">
                    <div class="feature-card p-4 rounded-4 border-hover-primary">
                        <i class="fas fa-clock fa-2x text-primary mb-3"></i>
                        <h3 class="h4 fw-bold">Быстрое реагирование</h3>
                        <p class="text-muted mb-0">Среднее время обработки обращения - 2 часа</p>
                    </div>
                    <div class="feature-card p-4 rounded-4 border-hover-primary">
                        <i class="fas fa-chart-line fa-2x text-primary mb-3"></i>
                        <h3 class="h4 fw-bold">Прозрачная статистика</h3>
                        <p class="text-muted mb-0">Отслеживайте статус заявки в реальном времени</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Секция статистики -->
<section class="stats-section my-6 bg-dark text-white">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <div class="stat-item p-4 bg-primary-soft rounded-4">
                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                    <h3 class="h2 fw-bold">15,000+</h3>
                    <p class="mb-0">Решенных проблем</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item p-4 bg-primary-soft rounded-4">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h3 class="h2 fw-bold">50,000+</h3>
                    <p class="mb-0">Активных пользователей</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item p-4 bg-primary-soft rounded-4">
                    <i class="fas fa-building fa-3x mb-3"></i>
                    <h3 class="h2 fw-bold">25+</h3>
                    <p class="mb-0">Городов подключено</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item p-4 bg-primary-soft rounded-4">
                    <i class="fas fa-heart fa-3x mb-3"></i>
                    <h3 class="h2 fw-bold">98%</h3>
                    <p class="mb-0">Довольных граждан</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Секция "Как это работает" -->
<section class="how-it-works my-5 bg-light">
    <div class="container">
        <h2 class="display-5 fw-bold text-center mb-5">3 простых шага к решению</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="step-card text-center p-5 rounded-4 shadow">
                    <div class="step-number bg-primary text-white rounded-2 mx-auto mb-4">1</div>
                    <i class="fas fa-edit fa-3x text-primary mb-4"></i>
                    <h3 class="h4 fw-bold mb-3">Опишите проблему</h3>
                    <p class="text-muted">Выберите категорию и заполните форму обращения</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card text-center p-5 rounded-4 shadow">
                    <div class="step-number bg-primary text-white rounded-2 mx-auto mb-4">2</div>
                    <i class="fas fa-search fa-3x text-primary mb-4"></i>
                    <h3 class="h4 fw-bold mb-3">Проверка заявки</h3>
                    <p class="text-muted">Наш сервис обрабатывает и верифицирует данные</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card text-center p-5 rounded-4 shadow">
                    <div class="step-number bg-primary text-white rounded-2 mx-auto mb-4">3</div>
                    <i class="fas fa-check-double fa-3x text-primary mb-4"></i>
                    <h3 class="h4 fw-bold mb-3">Решение вопроса</h3>
                    <p class="text-muted">Ответственные службы устраняют проблему</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Категории обращений -->
<section class="categories-section py-4 bg-light">
    <div class="container my-4">
        <h2 class="display-4 fw-bold text-center mb-5 position-relative">
            <span class="bg-primary text-white px-4 py-2 rounded-pill">Выберите категорию обращения</span>
        </h2>

        <div class="row g-4">
            @foreach (var category in Model.Categories)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("SelectCategory", "Citizen", new { categoryId = category.CategoryId })"
                       class="card category-card h-100 text-decoration-none transform-on-hover">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper bg-primary rounded-circle mx-auto mb-4 p-3">
                                <i class="fas fa-folder-open fa-2x text-white"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">@category.CategoryName</h3>
                            <p class="text-muted mb-0">@category.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 py-3">
                            <span class="btn btn-primary rounded-pill px-4">
                                Выбрать <i class="fas fa-arrow-right ms-2"></i>
                            </span>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Блок регистрации -->
<div class="container py-5 mb-4">
    <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
        @if (!User.Identity.IsAuthenticated)
        {
            <!-- Заголовок для неавторизованных пользователей -->
            <div class="card-header bg-gradient-primary py-4">
                <h2 class="text-white mb-0 text-center">
                    <i class="fas fa-user-plus me-2"></i>Регистрация граждан
                </h2>
            </div>
            <div class="card-body p-4 p-md-5">
                <!-- Форма регистрации -->
                <form asp-action="Register" method="post" class="needs-validation" novalidate>
                    <!-- Вывод ошибок валидации -->
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
                    }

                    <!-- Скрытое поле для returnUrl -->
                    <input type="hidden" name="returnUrl"
                           value="@(ViewData["ReturnUrl"] ?? Url.Action("Dashboard", "Citizen"))" />

                    <!-- Поля формы -->
                    <div class="row g-4">
                        <!-- ФИО -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="RegisterModel.FullName" class="form-control"
                                       placeholder="Иванов Иван Иванович" />
                                <label asp-for="RegisterModel.FullName" class="form-label">
                                    <i class="fas fa-user me-2 text-primary"></i>ФИО
                                </label>
                                <span asp-validation-for="RegisterModel.FullName" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="RegisterModel.Email" type="email" class="form-control"
                                       placeholder="name@example.com" />
                                <label asp-for="RegisterModel.Email" class="form-label">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Email
                                </label>
                                <span asp-validation-for="RegisterModel.Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Телефон -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="RegisterModel.PhoneNumber" class="form-control"
                                       placeholder="+7 (999) 999-99-99" />
                                <label asp-for="RegisterModel.PhoneNumber" class="form-label">
                                    <i class="fas fa-mobile-alt me-2 text-primary"></i>Телефон
                                </label>
                                <span asp-validation-for="RegisterModel.PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Адрес -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <textarea asp-for="RegisterModel.Address" class="form-control"
                                          placeholder="Адрес" style="height: 100px"></textarea>
                                <label asp-for="RegisterModel.Address" class="form-label">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>Адрес
                                </label>
                                <span asp-validation-for="RegisterModel.Address" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Кнопка отправки формы -->
                    <div class="d-grid mt-5">
                        <button type="submit" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow-sm">
                            <i class="fas fa-user-check me-2"></i>Зарегистрироваться
                        </button>
                    </div>
                </form>
            </div>
        }
        else
        {
            <!-- Заголовок для авторизованных пользователей -->
            <div class="card-header bg-gradient-primary py-4">
                <h2 class="text-white mb-0 text-center">
                    <i class="fas fa-user-plus me-2"></i>Вы вошли в свой аккаунт
                </h2>
            </div>
            <div class="card-body p-4 p-md-5">
                <!-- Сообщение для авторизованных пользователей -->
                <div class="alert alert-info d-flex align-items-center justify-content-between">
                    <div>
                        <i class="fas fa-info-circle me-2"></i>
                        Вы авторизованы как <strong>@User.Identity.Name</strong>. Для изменения данных перейдите в личный кабинет.
                    </div>
                    <a class="btn btn-outline-primary rounded-pill" asp-controller="Citizen" asp-action="Dashboard">
                        <i class="fas fa-user-cog me-2"></i>Профиль
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<div class="cont-height"></div>